<h1>Welcome to the Tech Blog</h1>

<section class="posts">
  {{#each posts as |post|}}
  <div class="row mb-4 post">
    <div class="col-md-12">
      <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
      <p>
        <span>By {{post.user.username}}</span>
        <span>on {{format_date post.createdAt}}</span>
      </p>
    </div>
    <div class="col-md-12">
      <p>{{post.content}}</p>
    </div>
    {{#if logged_in}}
    <div class="col-md-12">
      <form class="comment-form">
        <textarea id="comment-text" placeholder="Write a comment..." required></textarea>
        <input type="hidden" id="post-id" value="{{post.id}}" />
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </form>
    </div>
    {{/if}}
  </div>
  {{/each}}

  {{#unless posts}}
  <p>No posts yet! Be the first to <a href="/dashboard">create a post</a>.</p>
  {{/unless}}
</section>

<script src="/js/comment.js"></script>