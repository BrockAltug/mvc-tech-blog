<article>
  <h1>{{title}}</h1>
  <p>By {{user.username}} on {{format_date createdAt}}</p>
  <p>{{content}}</p>
</article>

<section>
  <h2>Comments</h2>

  {{#each comments}}
  <div class="comment">
    <p>{{comment}}</p>
    <p>By {{user.username}} on {{format_date createdAt}}</p>
  </div>
  {{else}}
  <p>No comments yet. Be the first to comment!</p>
  {{/each}}

  {{#if logged_in}}
  <form class="comment-form">
    <textarea id="comment-text" placeholder="Write a comment..." required></textarea>
    <input type="hidden" id="post-id" value="{{id}}" />
    <button type="submit" class="btn btn-primary">Add Comment</button>
  </form>
  {{else}}
  <p><a href="/login">Log in</a> to leave a comment.</p>
  {{/if}}
</section>

<script src="/js/comment.js"></script>